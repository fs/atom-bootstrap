#!/bin/sh

brew tap caskroom/cask

ATOM_CONFIG_DIR="$HOME/.atom"

# install atom
brew cask install atom

# install configuration
curl --silent --show-error --fail --location \
    'https://raw.githubusercontent.com/fs/atom-bootstrap/master/config/config.cson' \
    --output "${ATOM_CONFIG_DIR}/config.cson"

# install snippets
curl --silent --show-error --fail --location \
    'https://raw.githubusercontent.com/fs/atom-bootstrap/master/config/snippets.cson' \
    --output "${ATOM_CONFIG_DIR}/snippets.cson"

# install packages.txt
curl --silent --show-error --fail --location \
    'https://raw.githubusercontent.com/fs/atom-bootstrap/master/config/packages.txt' \
    --output "${ATOM_CONFIG_DIR}/packages.txt"

apm install --packages-file "${ATOM_CONFIG_DIR}/packages.txt"
